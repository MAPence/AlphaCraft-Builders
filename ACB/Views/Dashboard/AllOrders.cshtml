@model ACB.Models.ContractorVM
@{
    ViewData["Title"] = "All Orders";
    var orders = Model.Orders;
}
<style>
    body {
        background-image: url('../resources/images/constructioncranes.jpg');
        background-size: cover;
        background-repeat: no-repeat;
        background-position: center center;
        margin: 0;
        height: 100vh;
    }
</style>

<div class="col-9">
    <div class="container-fluid">
        <div class="row table-w container">
            <div class="col-12 py-3">
                <div class="dash-header">
                    All Orders
                    <div class="row px-4">
                        <div class="col-3 line col-header">
                            Order #
                        </div>
                        <div class="col-3 line col-header">
                            Date Ordered
                        </div>
                        <div class="col-3 line col-header">
                            Job
                        </div>
                        <div class="col-3 line col-header">
                            Total
                        </div>
                    </div>
                </div>
                <div class="container-fluid dash-row">
                    @foreach (var order in orders)
                    {
                        <div class="row">
                            <div class="col-3 line">
                                <a asp-controller="Dashboard" asp-action="DisplayOrders" asp-route-id="@order.Id" style="text-decoration:none">@order.Id</a>
                            </div>
                            <div class="col-3 line">
                                @(order.Created)
                            </div>
                            <div class="col-3 line">
                                @order.Case_id
                            </div>
                            <div class="col-3 line">
                                @order.Total
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>