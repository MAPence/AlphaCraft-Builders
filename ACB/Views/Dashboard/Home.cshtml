@model ACB.Models.ContractorVM
@{
    ViewData["Title"] = "home";
   
    var services = Model.Services;
    var quotes = Model.Quotes;
}

<div class="row d-flex justify-content-center">

    <div class="container-fluid col-9 ">
        <div class="row table-w container">
            <div class="col py-3">
                <div class="dash-header">Quote Requests
                    <div class="row px-4">

                        <div class="col-3 line col-header">
                            Request #
                        </div>
                        <div class="col-3 line col-header">
                            Client Name
                        </div>
                        <div class="col-3 line col-header">
                            Service Needed
                        </div>
                        <div class="col-3 line col-header">
                            Install Date
                        </div>
                    </div>
                </div>
                <div class="container-fluid dash-row">
                    @if (Model.Quotes.Count() < 1 && Model.Services.Count() > 0)
                    {
                        <div class="row">
                            <div class="col line py-2">
                                <p> There are currently no new quote requests in your area.</p>
                            </div>

                        </div>

                    }
                    @if (Model.Services.Count() < 1)
                    {
                        <div class="row">
                            <div class="col line py-2">
                                <p> You have not assigned any services to your account, this can be done under Account Settings.</p>
                            </div>

                        </div>

                    }

                    @foreach (var quote in @quotes)
                    {
                        <div class="row">
                                    <div class="col-3 line py-2">
                                        <a asp-controller="Dashboard" asp-action="DisplayQuote" asp-route-id="@quote.Id" style="text-decoration:none">@quote.Id</a>
                                    </div>
                                    <div class="col-3 line">
                                        <a href="#">@quote.Firstname @quote.Lastname</a>
                                    </div>
                                    <div class="col-3 line">
                                        @quote.Service
                                    </div>
                                    <div class="col-3 line">
                                        ASAP
                                    </div>                       
                        </div>

                    }              
                </div>
            </div>
        </div>
    </div>
</div>                     