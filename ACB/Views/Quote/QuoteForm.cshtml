@model ACB.Models.Quote

@{
    ViewData["Title"] = "QuoteForm";
}

<h1>QuoteForm</h1>

<h4>Quote</h4>
<hr />

<div class="container mx-5">
    <div calss="row">

        <div class="col-6 alpha-form">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                Service
                @Html.DropDownList("Service", ViewBag.Services, "Select Service", new { id="locs", @class="form-control"})
                
                <div class="form-group">
                    <label asp-for="client_first_name" class="control-label">First Name</label>
                    <input asp-for="client_first_name" class="form-control" />
                    <span asp-validation-for="client_first_name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="client_last_name" class="control-label">Last Name</label>
                    <input asp-for="client_last_name" class="form-control" />
                    <span asp-validation-for="client_last_name" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="client_email" class="control-label">Email</label>
                    <input asp-for="client_email" class="form-control" />
                    <span asp-validation-for="client_email" class="text-danger"></span>
                </div>
                
                <div class="form-group">
                    <label asp-for="details" class="control-label">Job Details</label>
                    <input asp-for="details" class="form-control" />
                    <span asp-validation-for="details" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="address" class="control-label">Job Address</label>
                    <input asp-for="address" class="form-control" />
                    <span asp-validation-for="address" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="city" class="control-label">Job City</label>
                    <input asp-for="city" class="form-control" />
                    <span asp-validation-for="city" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="state" class="control-label">Job State</label>
                    <input asp-for="state" class="form-control" />
                    <span asp-validation-for="state" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="zip" class="control-label">Job Zip Code</label>
                    <input asp-for="zip" class="form-control" />
                    <span asp-validation-for="zip" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Submit" class="btn btn-primary mt-5 form-btn " onclick="SuccessPrompt()" />
                </div>
            </form>
        </div>

    </div>
</div>
<div class="row">


    
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

<script>
    function SuccessPrompt() {
        alert("Success! Your quote request has been send to local contractors");
    }
</script>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
